<div class="wrapper">
  <div class="border post">
    <div class="post-header">
      <h3>Post#<%=@post.id%> by <%= @post.author.name%></h3>
      <ul class="comments-likes">
        <li>Comments: <%=@post.comments_counter || 0 %></li>
        <li>Likes: <%=@post.likes_counter || 0 %></li>
      </ul>
    </div>
     <p><%= @post.text %></p>
  </div>
    <ul class="list-type-none border comments">
     <% if @comments.empty? %>
        <p>No comments</p>
      <% else %>
        <% @comments.each do |comment| %>
          <li><%= comment.author.name %>: <%= comment.text %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="action_btn">
    <%= link_to  "Create new Comment", new_user_post_comment_path(@post.author, @post)  %>
    <%= render partial: 'likes/form' %>
  </div>
</div>