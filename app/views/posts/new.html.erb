<div class="wrapper">
  <div class="form-container">
    <h1>Add new post</h1>
    <div>
      <%= form_with model: @post, url: user_posts_path, method: :post,  local: true, scope: :post  do |form| %>
        <p>
          <%= form.label :title %><br>
          <%= form.text_field(:title, class: "form-control") %>
        </p>
        <p>
          <%= form.label :text %><br>
          <%= form.text_area(:text, rows: 5, class: "form-control") %>
        </p>
        <p>
          <%= form.submit 'Add Post' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
